<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="acadgild.session_03_assignment_02.MainActivity">

    <Button
        style="@style/codeTextView"
        android:id="@+id/redButton"
        android:background="#f00"
        android:layout_weight=".14"
        android:textColor="#000"
        android:text="@string/red"
        android:tag="@string/red"/>
    <Button
        style="@style/codeTextView"
        android:id="@+id/orangeButton"
        android:background="#ffa500"
        android:layout_weight=".14"
        android:textColor="#000"
        android:text="@string/orange"
        android:tag="orange"/>
    <Button
        style="@style/codeTextView"
        android:id="@+id/yellowButton"
        android:background="#ffff00"
        android:layout_weight=".14"
        android:textColor="#000"
        android:text="@string/yellow"
        android:tag="yellow"/>
    <Button
        style="@style/codeTextView"
        android:id="@+id/greenButton"
        android:background="#0f0"
        android:layout_weight=".14"
        android:textColor="#000"
        android:text="@string/green"
        android:tag="@string/green"/>
    <Button
        style="@style/codeTextView"
        android:id="@+id/blueButton"
        android:background="#00f"
        android:layout_weight=".14"
        android:textColor="#fff"
        android:text="@string/blue"
        android:tag="@string/blue"/>
    <Button
        style="@style/codeTextView"
        android:id="@+id/indigoButton"
        android:background="#4b0082"
        android:layout_weight=".15"
        android:textColor="#fff"
        android:text="@string/indigo"
        android:tag="@string/indigo"/>
    <Button
        style="@style/codeTextView"
        android:id="@+id/violetButton"
        android:background="#ee82ee"
        android:layout_weight=".15"
        android:textColor="#000"
        android:text="@string/violet"
        android:tag="@string/violet"/>
</LinearLayout>
